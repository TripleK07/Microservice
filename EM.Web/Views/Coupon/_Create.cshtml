@model EM.Core.Models.Dto.CouponDto;

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form id="create-coupon-form">
    <input type="hidden" asp-for="CouponId"/>
    <div class="mb-3">
        <label for="CouponCode" class="form-label">Coupon Code</label>
        <input type="text" class="form-control" asp-for="CouponCode" required/>
    </div>
    <div class="mb-3">
        <label for="DiscountAmount" class="form-label">Discount Amount</label>
        <input type="text" class="form-control" asp-for="DiscountAmount" required/>
    </div>
    <div class="mb-3">
        <label for="MinAmount" class="form-label">Min Amount</label>
        <input type="text" class="form-control" asp-for="MinAmount" required/>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save Coupon</button>
    </div>
</form>